<!-- global template -->
doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap-3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap-3.3.6/themes/jumbotron-narrow.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript', src='/javascripts/jquery-1.12.0.min.js')
    script(type='text/javascript', src='/bootstrap-3.3.6/js/bootstrap.min.js')
    script(type='text/javascript', src='/javascripts/meezz.js')
    script(type='text/javascript', src='/javascripts/SimpleWebRTC.js')
  body
    div(class='container')
        div(class='header clearfix')
            nav
                ul(class='nav nav-pills pull-right')
                    li(role='presentation', class='active')
                        a(href='/') Home
                    li(role='presentation')
                        a(href='#', data-toggle='modal', data-target='#aboutModal') About
                    li(role='presentation')
                        a(href='#', data-toggle='modal', data-target='#contactModal') Contact
            a(href='/') #[img(src='/images/logo.png', name='Meezz')]
        <!-- about modal -->
        div(id='aboutModal', class='modal fade', role='dialog')
            div(class='modal-dialog')
                div(class='modal-content')
                    div(class='modal-header')
                        button(type="button", class="close", data-dismiss="modal") &times;
                        h4(class="modal-title") About
                    div(class="modal-body")
                        p= aboutText
                    div(class="modal-footer")
                        button(type="button", class="btn btn-default", data-dismiss="modal") Close
        <!-- contact modal -->
        div(id='contactModal', class='modal fade', role='dialog')
            div(class='modal-dialog')
                div(class='modal-content')
                    div(class='modal-header')
                        button(type="button", class="close", data-dismiss="modal") &times;
                        h4(class="modal-title") Contact
                    div(class="modal-body")
                        p= contactText
                    div(class="modal-footer")
                        button(type="button", class="btn btn-default", data-dismiss="modal") Close
        block content
        br
        footer(class='footer')
            p= copyrightText
